@model Dish
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white">
        <div class="row justify-content-center mt-3 mb-1 mx-3">
            <h1>@Model.Name</h1>
        </div>
        <div class="row justify-content-center mb-3 mx-3">
            <div class="col-8 text-center border-bottom">
                <h4>@Model.Chef</h4>
            </div>
        </div>
        <div class="row m-3">
            <div class="col text-center">
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="row my-1 ml-5 mr-2 justify-content-start">
            <div class="col-lg-2 text-left">
                <h6>Calories:</h6>
            </div>
            <div class="col-lg-3 text-left">
                <p>@Model.Calories</p>
            </div>
        </div>
        <div class="row my-1 ml-5 mr-2 mb-3 justify-content-start">
            <div class="col-lg-2 text-left">
                <h6>Tastiness:</h6>
            </div>
            <div class="col-lg-3 text-left">
                <p>@Model.Tastiness</p>
            </div>
        </div>
        <div class="row mt-3 mx-3 mb-5 justify-content-center border-bottom">
            <div class="col-lg-2 m-4 text-center">
                <form asp-action="Destroy" asp-controller="Main" method="POST" asp-route-dishId="@Model.DishId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="col-lg-2 m-4 text-center">
                <a href="edit/@Model.DishId" class="btn btn-success">Edit</a> 
            </div>
        </div>
    </div>
</div>